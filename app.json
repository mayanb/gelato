{
  "expo": {
    "name": "Polymer",
    "description": "Polymer mobile app",
    "slug": "polymer",
    "privacy": "unlisted",
    "sdkVersion": "26.0.0",
    "platforms": ["ios", "android"],
    "version": "5.1.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "extra": {
      "requiredUpdate": true
    },
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#1653D7"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.usepolymer.polymer",
      "infoPlist": {
        "NSCameraUsageDescription": "This app uses the camera to scan QR codes on items in your factory and take pictures for tasks.",
        "NSPhotoLibraryUsageDescription": "This app uses your photo library to add pictures to a task."
      }
    },
    "android": {
      "package": "com.usepolymer.polymer",
      "versionCode": 2,
      "permissions": [
        "CAMERA",
        "CAMERA_ROLL"
      ]
    },
    "assetBundlePatterns": [
      "src/resources/assets/**",
      "node_modules/react-navigation/src/**/*.png",
      "node_modules/@expo/vector-icons/fonts/Ionicons.ttf"
    ],
    "androidStatusBar": {
      "backgroundColor": "#eeeeee",
    }
  }
}
